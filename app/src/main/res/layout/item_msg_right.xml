<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_margin"
    android:paddingEnd="@dimen/dp_margin"
    android:paddingTop="@dimen/dp_4"
    android:paddingBottom="@dimen/dp_4">

    <TextView
        android:id="@+id/item_msgRight_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020/11/13 12:00"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/textColorHint"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_gravity="center_horizontal"/>

    <!-- 消息部分 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_70">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">



            <TextView
                android:id="@+id/item_msgRight_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一行白鹭上青天"
                android:textSize="@dimen/sp_16"
                android:paddingVertical="@dimen/dp_8"
                android:paddingHorizontal="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@mipmap/message_text_send"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/item_msgRight_iv_head"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            tools:src="#aaa"
            android:layout_marginStart="@dimen/dp_10"/>


    </LinearLayout>


</LinearLayout>
