<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/dp_14"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/dialog_contactsSync_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在同步联系人信息"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp_18"/>

    <TextView
        android:id="@+id/dialog_contactsSync_tv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 0"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_margin"
        android:layout_marginBottom="@dimen/dp_34"/>


    <View
        android:id="@+id/dialog_contactsSync_line_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/line_color" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_contactsSync_btn_over"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_weight="1"
        android:background="@drawable/transparent_selector"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/common_complete"
        android:textColor="@color/textColor"
        android:textSize="14sp" />

</LinearLayout>
